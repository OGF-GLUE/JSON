{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://schemas.ogf.org/glue/2013/05/spec_2.0/Policy.json",
  "type": "object",
  "allOf": [{"$ref": "http://schemas.ogf.org/glue/2013/05/spec_2.0/Entity.json"}],
  "properties": {
    "Scheme": {
      "type": "string",
      "description": "PolicyScheme_t (open enumeration)"
    },
    "Rule": {
      "type": "array",
      "description": "Policy rules",
      "items": {
        "type": "string"
      }
    },
    "UserDomain": {
      "type": "array",
      "description": "The ID(s) of the UserDomains this Policy applies to",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["Scheme","Rule","UserDomain"]
}
